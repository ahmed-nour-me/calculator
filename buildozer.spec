[app]

# عنوان التطبيق
title = الحاسبة البسيطة

# اسم الحزمة (يجب أن يكون فريداً)
package.name = simplecalculator

# اسم المجال
package.domain = org.example

# إصدار التطبيق
version = 1.0

# مصادر التطبيق
source.dir = .

# الملف الرئيسي للتطبيق
source.main = calculator.py

# إصدار Android SDK
android.sdk = 28
android.minapi = 21
android.ndk = 23b

# أذونات Android (لا توجد أذونات مطلوبة للحاسبة)
android.permissions = 

# ميزات Android
android.features = 

# بنية المكتبات
